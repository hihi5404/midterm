<h1>Book</h1>
<%= link_to "add book", new_book_path(@book) ,class: "btn btn-primary"%>
<table class= "table table-hover ">

  <thead>
  <tr>
    <td>書名</td>
    <td>簡介</td>
    <td>作者姓名</td>
    <td>售價</td>
  </tr>
  </thead>
  
   <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %>
        <td><%= book.introduction %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
       <td>
         <%= link_to "edit", edit_book_path(book), class: "btn btn-success btn-xs"%>
         <%= link_to "delete",book,method: "delete" ,data: {confirm:'delete!?'}, class: "btn btn-danger btn-xs" %>
        </td>
      </tr> 
   </tbody>
<% end %>
  
 </table>